# tests/integration/test_smodes_workflow.py
def test_symmetry_adaptation(sample_smodes_input):
    processor = SmodesProcessor(
        smodes_input=sample_smodes_input,
        target_irrep="T1u"
    )
    result = processor.symmadapt()
    
    assert processor.num_sam > 0
    assert len(processor.phonon_vecs) == processor.num_sam
    assert isinstance(result, (list, bool))